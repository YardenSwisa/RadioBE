<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="2dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#deecff"
                android:endColor="#c6cfff"/>
            <stroke
                android:width="2dp"
                android:color="#c6cfff" />
            <corners
                android:radius="10dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>


</selector>